<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/JoinFragment">

    <fragment
        android:id="@+id/JoinFragment"
        android:name="com.example.pythian_games.fragments.loginFragments.JoinFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_join">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/NewGameFragment" />
    </fragment>
    <fragment
        android:id="@+id/NewGameFragment"
        android:name="com.example.pythian_games.fragments.loginFragments.NewGameFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_new_game">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/JoinFragment" />
    </fragment>
</navigation>